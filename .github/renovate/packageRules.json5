{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "Loose versioning for non-semver packages",
      "matchDatasources": ["docker"],
      "versioning": "loose",
      "matchPackagePatterns": ["onedr0p/plex", "qbittorrent"]
    },
    {
      "description": "Hotio Date Versioning (e.g. 20240107 for 1/7/2024)",
      "matchDatasources": ["docker"],
      "versioning": "regex:^release-(?<major>\\d{4})(?<minor>\\d{2})(?<patch>\\d{2})(?<build>.*)?$",
      "matchPackagePatterns": ["cloudflare"]
    },
    {
      "description": "Hotio Release Semver Packages",
      "matchDatasources": ["docker"],
      "versioning": "regex:^release-(?<major>\\d+)\\.(?<minor>\\d+)?\\.(?<patch>\\d+)?(-(?<build>.*))?$",
      "matchPackagePatterns": ["tautulli", "overseerr", "autoscan", "unpackerr"]
    },
    {
      "description": "version with a v, then semver and then compatibility",
      "matchDatasources": ["docker"],
      "versioning": "regex:^v(?P<major>\\d+)\\.(?P<minor>\\d+)\\.(?P<patch>\\d+)(-hf(?P<build>\\d+))?$",
      "matchPackagePatterns": ["requestrr"]
    },
    {
      "description": "Custom versioning for k3s",
      "matchDatasources": ["github-releases"],
      "versioning": "regex:^v(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(?<compatibility>\\+k3s)(?<build>\\d+)$",
      "matchPackagePatterns": ["k3s"]
    }
  ]
}