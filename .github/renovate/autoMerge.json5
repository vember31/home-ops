{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": ["Auto-merge certain container digest updates"],
      "matchDatasources": ["docker"],
      "automerge": true,
      "automergeType": "pr",
      "matchUpdateTypes": ["digest"],
      "matchPackagePatterns": ["hotio","bazarr","sonarr","radarr","qbittorrent","prowlarr","autopulse"]
    },
    {
      "description": ["Auto-merge kube-prometheus-stack Helm chart updates"],
      "matchPackageNames": ["prometheus-community/kube-prometheus-stack"],
      "matchUpdateTypes": ["patch", "minor","major","digest"], 
      "automerge": true,
      "automergeType": "pr",
      "rangeStrategy": "replace"
    }
  ]
}